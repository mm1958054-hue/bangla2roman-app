<!DOCTYPE html>
<html lang="bn">
<head>
  <meta charset="UTF-8">
  <title>Bangla to Roman Converter</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      padding: 30px;
      background-color: #f0f0f0;
    }
    textarea {
      width: 100%;
      height: 120px;
      font-size: 18px;
      padding: 10px;
      border-radius: 6px;
      border: 1px solid #ccc;
    }
    .output {
      margin-top: 20px;
      padding: 15px;
      background-color: #fff;
      border: 1px solid #ddd;
      border-radius: 6px;
      font-size: 18px;
    }
  </style>
</head>
<body>

  <h2>বাংলা থেকে রোমান কনভার্টার</h2>
  <p>বাংলা লিখো নিচে রোমান হরফে দেখাবে।</p>

  <textarea id="banglaInput" placeholder="এখানে বাংলা লিখো..."></textarea>
  <div class="output" id="romanOutput">Roman: </div>

  <script>
    const transliterate = (text) => {
      const map = {
        'আ':'a','অ':'o','ই':'i','ঈ':'ee','উ':'u','ঊ':'oo',
        'এ':'e','ঐ':'oi','ও':'o','ঔ':'ou',
        'ক':'k','খ':'kh','গ':'g','ঘ':'gh','ঙ':'ng',
        'চ':'ch','ছ':'chh','জ':'j','ঝ':'jh','ঞ':'n',
        'ট':'t','ঠ':'th','ড':'d','ঢ':'dh','ণ':'n',
        'ত':'t','থ':'th','দ':'d','ধ':'dh','ন':'n',
        'প':'p','ফ':'f','ব':'b','ভ':'v','ম':'m',
        'য':'j','র':'r','ল':'l','শ':'sh','ষ':'sh','স':'s','হ':'h',
        'া':'a','ি':'i','ী':'ee','ু':'u','ূ':'oo',
        'ে':'e','ৈ':'oi','ো':'o','ৌ':'ou',
        '্':'','য়':'y','ঁ':'n'
      };
      return text.split('').map(char => map[char] || char).join('');
    };

    const input = document.getElementById('banglaInput');
    const output = document.getElementById('romanOutput');

    input.addEventListener('input', () => {
      const banglaText = input.value;
      const romanText = transliterate(banglaText);
      output.innerText = "Roman: " + romanText;
    });
  </script>

</body>
</html>
